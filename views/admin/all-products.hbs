<div class="container p-5">
    <div class="ml-auto">
        
    </div>
    <section>
    <table class="table">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
      <th scope="col"><a href="/admin/add-products" class="btn btn-success" >Add Products</a></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td>{{this.description}}</td>
      <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" style="color: white;">Edit</a>
          <a href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure wants to delete {{this.name}}?')" class="btn btn-danger" style="color: white;">Delete</a>
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
</section>

</div>
